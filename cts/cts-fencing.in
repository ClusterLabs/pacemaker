        test.add_cmd("stonith_admin",
                     args='--output-as=xml -R true1 -a fence_dummy -o mode=pass -o pcmk_host_list=node_fake '
                          '-o pcmk_off_timeout=1 -o pcmk_reboot_timeout=10')
