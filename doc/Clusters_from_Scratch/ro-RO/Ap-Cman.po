"        &lt;/method&gt;\n"
"      &lt;/fence&gt;\n"
"    &lt;/clusternode&gt;\n"
"    &lt;clusternode name=\"pcmk-3\" nodeid=\"2\"&gt;\n"
"      &lt;fence&gt;\n"
"        &lt;method name=\"pcmk-redirect\"&gt;\n"
"          &lt;device name=\"pcmk\" port=\"pcmk-3\"/&gt;\n"
"        &lt;/method&gt;\n"
"      &lt;/fence&gt;\n"
"    &lt;/clusternode&gt;\n"
"  &lt;/clusternodes&gt;\n"
"  &lt;fencedevices&gt;\n"
"    &lt;fencedevice name=\"pcmk\" agent=\"fence_pcmk\"/&gt;\n"
"  &lt;/fencedevices&gt;\n"
"&lt;/cluster&gt;\n"
"	\n"
"	"
