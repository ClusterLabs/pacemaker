%if %{with linuxha}
Requires:      %{python_name}-%{name} = %{version}-%{release}
%endif
%{?systemd_requires}

Requires:      %{python_path}
BuildRequires: %{python_name}-devel
BuildRequires: %{python_name}-setuptools

# Pacemaker requires a minimum libqb functionality
